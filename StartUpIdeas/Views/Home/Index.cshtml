<div>
    <table id="projects-list" class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h3><span class="glyphicon glyphicon-chevron-right"></span>
                    
                    @Html.ActionLink((string)item.ProjectName, "Details", "StartUpIdeas", new  {id = item.Id }, null)
                    </h3>
                     
                     @if (item.ProjectDescription.Trim().Length < 100)
                        {
                            <p>@Html.Raw(item.ProjectDescription)</p>
                        }
                        else
                        {
                            <p>@Html.Raw(item.ProjectDescription.Substring(0, 100))...</p>
                        }

                    <p>Submitted By: @item.FirstName @item.LastName at @item.SubmitedDateTime</p>
                </td>

            </tr>
           
        }
    </table>

</div>